<UserControl x:Class="DynamicViewExample.Views.ProdInterface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DynamicViewExample.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Grid.Column="2" Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Production Interface" FontSize="20" FontWeight="Bold" Foreground="#2D572C" Margin="0,0,0,20" />
        <TextBlock Text="IP Address" Margin="0,0,0,5" />
        <TextBox x:Name="ipa" Height="30" Margin="0,0,0,15" />
        <Button Content="Connect" Height="35" Background="Black" Foreground="White" Margin="0,0,0,15" Click="Button_Click_1" />
        <Button Content="Start Production" Height="35" Background="#2D572C" Foreground="White" Click="StartRobotProcess_Click" Margin="0,0,0,10" />
        <Button Content="Stop Production" Height="35" Background="#C62828" Foreground="White" Click="Button_Click_3" />
    </StackPanel>
</UserControl>
